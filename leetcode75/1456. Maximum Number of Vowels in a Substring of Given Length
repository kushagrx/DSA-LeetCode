class Solution {
public:
    bool isVowel(char c) {
        return c == 'a' || c == 'e' || c == 'i' || c == 'o' || c == 'u';
    }

    int maxVowels(string s, int k) {
        int n = s.length();
        int left = 0, right = 0;
        int count = 0, maxCount = 0;

        while (right < n) {
            if (isVowel(s[right])) count++;
            
            if (right - left + 1 > k) {
                if (isVowel(s[left])) count--;
                left++;
            }

            maxCount = max(maxCount, count);
            right++;
        }

        return maxCount;
    }
};
