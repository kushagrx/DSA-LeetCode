class Solution {
public:
    double findMaxAverage(vector<int>& nums, int k) {
        int n=nums.size();
        double sum=0;
        for(int i=0;i<k;i++){
            sum+=nums[i];
        }
        double result=sum/k;

        for(int right=k;right<n;right++){
            sum+=nums[right]-nums[right-k];
            result=max(result,sum/k);
        }

        return result;

    }
};
