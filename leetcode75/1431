class Solution {
public:
    vector<bool> kidsWithCandies(vector<int>& candies, int extraCandies) {
        int n = candies.size();
        vector<bool> result;

        int maxCandies=0;
        for(auto it:candies){
            if(it>maxCandies){
                maxCandies=it;
            }
        }

        for (int i=0;i<n;i++){
            if (candies[i] + extraCandies >= maxCandies) {
                result.push_back(true);
            } else {
                result.push_back(false);
            }
        }

        return result;
    }
};
