class Solution {
public:
    int strStr(string haystack, string needle) {
        int left = 0, right = 0;
        int n = haystack.length();
        int m = needle.length();
        if (m == 0) return 0;

        while (left < n) {
            int start = left;
            right = 0;
            while (left < n && right < m && haystack[left] == needle[right]) {
                left++;
                right++;
            }
            if (right == m)
                return start;

            left = start + 1;
        }

        return -1;
    }
};
