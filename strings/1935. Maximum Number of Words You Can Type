class Solution {
public:
    int canBeTypedWords(string text, string brokenLetters) {
        int count=0;
        
        vector<bool>mapbl(26);
        for(char c:brokenLetters){
            mapbl[c - 'a']=true;
        }

        bool canType=true;

        for(char &c : text){
            if(c == ' '){     //traversed one word
                if(canType){
                    count++;
                }
                canType=true;
            }
            else if(mapbl[c-'a'] == true){
                canType=false;
            }
        }

        if(canType == true){      //For the last word
            count++;
        }

        return count;
        
    }
};
