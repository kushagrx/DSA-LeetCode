class Solution {
public:
    bool helper(string sub, string &s) {
        string temp = "";
        int times = s.length() / sub.length();
        for (int i = 0; i < times; i++) {
            temp += sub;
        }
        return temp == s;
    }

    bool repeatedSubstringPattern(string s) {
        int n = s.length();
        string substring = "";

        for (int idx = 0; idx < n; idx++) {
            substring.push_back(s[idx]);
            if (n % substring.length() != 0) continue;
            if (substring.length() < n) {
                if (helper(substring, s)) return true;
            }
        }

        return false;
    }
};
