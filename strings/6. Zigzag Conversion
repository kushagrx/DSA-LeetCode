class Solution {
public:
    string convert(string s, int numRows) {
        if (numRows == 1 || s.size() <= numRows) return s;

        vector<vector<char>> matrix(numRows, vector<char>(s.size(), ' '));
        int row = 0, col = 0;
        bool goingDown = true;

        for (char c : s) {
            matrix[row][col] = c;

            if (goingDown) {
                if (row == numRows - 1) { // reached bottom
                    goingDown = false;
                    row--;
                    col++;
                } else row++;
            } else {
                if (row == 0) { // reached top
                    goingDown = true;
                    row++;
                } else {
                    row--;
                    col++;
                }
            }
        }

        string result = "";
        for (int i = 0; i < numRows; i++) {
            for (int j = 0; j < s.size(); j++) {
                if (matrix[i][j] != ' ')
                    result += matrix[i][j];
            }
        }

        return result;
    }
};
