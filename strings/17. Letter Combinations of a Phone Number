class Solution {
public:
    vector<string> res;
    unordered_map<char, string> mp;

    void solve(int i, string& digits, string temp) {
        if (i>=digits.size()) {
            res.push_back(temp);
            return;
        }

        string letters = mp[digits[i]]; 
        for (char ch : letters) {
            solve(i + 1, digits, temp + ch);
        }
    }

    vector<string> letterCombinations(string digits) {
        if (digits.empty()) return {};

        mp['2']="abc";
        mp['3']="def";
        mp['4']="ghi";
        mp['5']="jkl";
        mp['6']="mno";
        mp['7']="pqrs";
        mp['8']="tuv";
        mp['9']="wxyz";

        solve(0, digits, "");
        return res;
    }
};
