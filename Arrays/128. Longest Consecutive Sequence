class Solution {
public:
    int longestConsecutive(vector<int>& nums) {
        int n=nums.size();
        if(n==0) return 0;
        sort(nums.begin(),nums.end());

        int longest=1,currstreak=1;
        for(int i=1;i<n;i++){
            int last=nums[i-1];
            if(nums[i]==last){
                continue;
            }
            else if(nums[i]==last+1){
                currstreak++;
            }
            else{
                longest=max(longest,currstreak);
                currstreak=1;
            }
        }

        return max(longest,currstreak);
    }
};
