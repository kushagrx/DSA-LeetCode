class Solution {
public:
    void Traversal(TreeNode* root){
        if(!root) return;
        TreeNode* left=root->left;  
        TreeNode* right=root->right;

        root->left=right;  
        root->right=left;

        Traversal(root->left);
        Traversal(root->right);
    }
    TreeNode* invertTree(TreeNode* root) {
        if(!root) return NULL;
        Traversal(root);
        return root;
    }
};
