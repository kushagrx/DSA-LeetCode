class Solution {
public:
    int m, n;
    vector<vector<int>> directions{{-1,0},{1,0},{0,-1},{0,1}};

    bool find(int i, int j, string& word, int idx, vector<vector<char>>& board) {
        if (board[i][j] != word[idx]) return false;
        if (idx == word.size() - 1) return true;

        char temp = board[i][j];
        board[i][j] = '$';

        for (auto& dir : directions) {
            int ni = i + dir[0];
            int nj = j + dir[1];
            if (ni >= 0 && nj >= 0 && ni < m && nj < n && board[ni][nj] != '$') {
                if (find(ni, nj, word, idx + 1, board)) {
                    board[i][j] = temp;
                    return true;
                }
            }
        }
        board[i][j] = temp;
        return false;
    }

    bool exist(vector<vector<char>>& board, string word) {
        m = board.size();
        n = board[0].size();

        for (int i = 0; i < m; i++) {
            for (int j = 0; j < n; j++) {
                if (board[i][j] == word[0] && find(i, j, word, 0, board)) {
                    return true;
                }
            }
        }
        return false;
    }
};
