class Solution {
public:
    vector<vector<int>> directions{{-1,0},{1,0},{0,-1},{0,1}};
    void solve(int i, int j, vector<vector<int>>& grid, int n, int m, 
    int &paths, int nonobs, int count) {
        if (i < 0 || j < 0 || i >= n || j >= m || grid[i][j] == -1) 
            return;

        if (grid[i][j] == 2) {
            if (count == nonobs) paths++;
            return;
        }

        int temp = grid[i][j];
        grid[i][j] = -1;

        for (auto dir : directions) {
            int newi = i + dir[0];
            int newj = j + dir[1];
            solve(newi, newj, grid, n, m, paths, nonobs, count + 1);
        }

        // backtrack
        grid[i][j] = temp;
    }

    int uniquePathsIII(vector<vector<int>>& grid) {
        int n = grid.size();
        int m = grid[0].size();

        int nonobs = 0, start_i = 0, start_j = 0;
        int paths = 0;

        for (int i = 0; i < n; i++) {
            for (int j = 0; j < m; j++) {
                if (grid[i][j] != -1)
                    nonobs++;
                if (grid[i][j] == 1) {
                    start_i = i;
                    start_j = j;
                }
            }
        }

        solve(start_i, start_j, grid, n, m, paths, nonobs, 1);
        return paths;
    }
};
