class Solution {
public:
    vector<vector<int>> generate(int numRows) {
        vector<vector<int>> finalresult;
        finalresult.push_back({1});

        int level = 2;
        while (level <= numRows) {
            vector<int> levelresult;
            vector<int> &prev = finalresult.back();
            int left = 0, right = prev.size();

            for (int i = 0; i < right; i++) {
                levelresult.push_back(left + prev[i]);
                left = prev[i];
            }
            levelresult.push_back(prev.back() + 0);
            finalresult.push_back(levelresult);
            level++;
        }

        return finalresult;
    }
};
