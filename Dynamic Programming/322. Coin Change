class Solution {
public:
    int dp[13][100001];

    int solve(vector<int>& coins, int i, int remaining) {
    if (remaining == 0) return 0;
    if (remaining < 0 || i >= coins.size()) return 1e9;
    if (dp[i][remaining] != -1) return dp[i][remaining];

    int take = 1 + solve(coins,i,remaining-coins[i]);
    int skip = solve(coins,i+1,remaining);

    return dp[i][remaining] = min(take, skip);
}

    int coinChange(vector<int>& coins, int amount) {
        memset(dp,-1,sizeof(dp));
        if(amount<1) return 0;
    
        int ans=solve(coins,0,amount);

        return ans>=1e9?-1:ans;
    }
};
