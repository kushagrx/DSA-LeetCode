class Solution {
public:
    int solve(int n, vector<int>& dp, string& s, int i) {
        if (i == n) return 1;
        if (s[i] == '0') return 0;
        if (dp[i] != -1) return dp[i];

        int t1 = solve(n, dp, s, i + 1); //check for one letter
        int t2 = 0;
        if (i + 1 < n) {
            if (s[i] == '1' || (s[i] == '2' && s[i+1] <= '6')) {
                t2 = solve(n, dp, s, i + 2);    //check for 2 letter
            }
        }

        return dp[i] = t1 + t2;
    }

    int numDecodings(string s) {
        int n = s.length();
        vector<int> dp(n + 1, -1);
        return solve(n, dp, s, 0);   
    }
};
