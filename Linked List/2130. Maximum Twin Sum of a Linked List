class Solution {
public:
    int pairSum(ListNode* head) {
        int maxsum=0;
        ListNode* left=head;
        ListNode* right=head;

        stack<int>st;
        while(right){
            st.push(right->val);
            right=right->next;
        }

        while(left && !st.empty()){
            int sum= left->val + st.top();
            maxsum=max(sum,maxsum);
            left=left->next;
            st.pop();
        }

        return maxsum;

    }
};
