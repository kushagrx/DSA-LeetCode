class Solution {
public:
    unordered_map<int,int> countDigits(int n) {
        unordered_map<int,int> cnt;
        while (n > 0) {
            cnt[n % 10]++;
            n /= 10;
        }
        return cnt;
    }

    bool reorderedPowerOf2(int n) {
        auto target = countDigits(n);
        for (int i = 0; i < 31; i++) {
            if (countDigits(1 << i) == target) {
                return true;
            }
        }
        return false;
    }
};
