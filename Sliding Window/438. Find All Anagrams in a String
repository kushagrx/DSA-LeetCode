class Solution {
public:
    vector<int> findAnagrams(string s, string p) {
        vector<int> result;
        unordered_map<char,int> mp, window;

        for (char c : p) {
            mp[c]++;
        }

        int left = 0;
        for (int right = 0; right < s.length(); right++) {
            window[s[right]]++;

            if (right - left + 1 > p.length()) {
                window[s[left]]--;
                if (window[s[left]] == 0) {
                    window.erase(s[left]);
                }
                left++;
            }

            if (window == mp) {
                result.push_back(left);
            }
        }

        return result;
    }
};
