class Solution {
public:
    bool containsNearbyDuplicate(vector<int>& nums, int k) {
        int n=nums.size();
        unordered_set<int>window;
        int left=0,right=0;

        while(right<n){
            if(window.count(nums[right])){
                return true;
            }

            window.insert(nums[right]);
            right++;
            
            while(abs(left-right)>k){
                window.erase(nums[left]);
                left++;
            }
        }

        return false;
    }
};
