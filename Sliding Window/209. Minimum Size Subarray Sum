class Solution {
public:
    int minSubArrayLen(int target, vector<int>& nums) {
        int n=nums.size();
        int sum=0;
        int minwindow=INT_MAX;
        int left=0,right=0;

        while(right<n){
            sum+=nums[right];
            while(sum>=target){
                int window=right-left+1;
                minwindow=min(minwindow,window);

                sum-=nums[left];
                left++;
            }
            right++;
        }

        if(minwindow==INT_MAX) return 0;
        return minwindow;
    }
};
