class Solution {
public:

    void dfs(vector<vector<int>>& image,int n,int m,int i,int j,int originalColor,int color){
        if(i<0 || j<0||i>=n||j>=m||image[i][j]!=originalColor) return;

        image[i][j]=color;

        dfs(image,n,m,i+1,j,originalColor,color);
        dfs(image,n,m,i-1,j,originalColor,color);
        dfs(image,n,m,i,j+1,originalColor,color);
        dfs(image,n,m,i,j-1,originalColor,color);
    }

    vector<vector<int>> floodFill(vector<vector<int>>& image, int sr, int sc, int color) {
        int n=image.size();
        int m=image[0].size();

        int originalColor = image[sr][sc];
        if(originalColor == color) return image;

        dfs(image,n,m,sr,sc,originalColor,color);

        return image;
    }
};
