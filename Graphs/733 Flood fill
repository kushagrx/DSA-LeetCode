class Solution {
public:
    void dfs(vector<vector<int>>& image, int sr, int sc, int n, int m, int oldColor, int newColor) {
        if (sr < 0 || sc < 0 || sr >= n || sc >= m || image[sr][sc] != oldColor) return;
        image[sr][sc] = newColor;

        dfs(image, sr + 1, sc, n, m, oldColor, newColor);
        dfs(image, sr - 1, sc, n, m, oldColor, newColor);
        dfs(image, sr, sc + 1, n, m, oldColor, newColor);
        dfs(image, sr, sc - 1, n, m, oldColor, newColor);
    }

    vector<vector<int>> floodFill(vector<vector<int>>& image, int sr, int sc, int newColor) {
        int n = image.size();
        int m = image[0].size();
        int oldColor = image[sr][sc];
        if (oldColor == newColor) return image;

        dfs(image, sr, sc, n, m, oldColor, newColor);
        return image;
    }
};
