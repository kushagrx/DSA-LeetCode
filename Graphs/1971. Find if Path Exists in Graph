class Solution {
public:
    bool validPath(int n, vector<vector<int>>& edges, int source, int destination) {
        vector<vector<int>>adj(n);
        for(auto it:edges){
            adj[it[0]].push_back(it[1]);
            adj[it[1]].push_back(it[0]);
        }

        vector<bool>vis(n,0);
        queue<int>q;
        q.push(source);
        vis[source]=1;

        while(!q.empty()){
            auto curr=q.front();
            q.pop();
            if(curr == destination) return true;

            for(auto next:adj[curr]){
                if(!vis[next]){
                    vis[next]=1;
                    q.push(next);
                }
            }
        }
        return false;
    }
};
