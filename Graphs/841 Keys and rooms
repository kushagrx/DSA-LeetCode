class Solution {
public:
    void dfs(vector<vector<int>>& rooms,int i, vector<bool>&visited){
        visited[i]=true;
        for(auto key:rooms[i]){
            if(!visited[key]){
                dfs(rooms,key,visited);
            }
        }
    }
    bool canVisitAllRooms(vector<vector<int>>& rooms) {
        int n=rooms.size();
        vector<bool>visited(n,false);

        dfs(rooms,0,visited);
        for(auto it:visited){
            if(it==false){
                return false;
                break;
            }
        }
        return true;
    }
};
